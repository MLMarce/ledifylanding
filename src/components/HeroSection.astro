---
export interface Props {
  title: string;
  subtitle: string;
  buttonText: string;
  buttonLink: string;
}

const { title, subtitle, buttonLink, buttonText} = Astro.props
---

<section class="bg-fondo text-center py-16">
  <h1 class="text-4xl font-bold text-cian mb-4">{title}</h1>
  <p class="text-textoSecundario mb-6">{subtitle}</p>
  <a
    href={buttonLink}
    class="bg-cian text-fondo py-2 px-4 rounded hover:bg-opacity-80"
  >
    {buttonText}
  </a>
</section>
